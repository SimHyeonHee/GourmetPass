<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="bcryptPasswordEncoder"
		class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder" />

	<bean id="loginSuccessHandler"
		class="com.uhi.gourmet.member.LoginSuccessHandler" />
		<!-- ===== CORS 설정 Bean 추가 (여기가 핵심!) ===== -->
	<bean id="corsConfigurationSource" 
		class="org.springframework.web.cors.UrlBasedCorsConfigurationSource">
		<property name="corsConfigurations">
			<map>
				<entry key="/**">
					<bean class="org.springframework.web.cors.CorsConfiguration">
						<!-- 모든 origin 허용 (또는 특정 도메인만: http://localhost:9090) -->
						<property name="allowedOriginPatterns">
							<list>
								<value>*</value>
							</list>
						</property>
						<!-- 모든 HTTP 메서드 허용 -->
						<property name="allowedMethods">
							<list>
								<value>GET</value>
								<value>POST</value>
								<value>PUT</value>
								<value>DELETE</value>
								<value>OPTIONS</value>
							</list>
						</property>
						<!-- 모든 헤더 허용 -->
						<property name="allowedHeaders">
							<list>
								<value>*</value>
							</list>
						</property>
						<!-- 인증 정보(쿠키, 세션) 허용 -->
						<property name="allowCredentials" value="true" />
						<!-- preflight 캐시 시간 (초) -->
						<property name="maxAge" value="3600" />
					</bean>
				</entry>
			</map>
		</property>
	</bean>

		
	


	<security:http auto-config="true" use-expressions="true">
	<!-- ===== CORS 필터 활성화 (이 줄 추가!) ===== -->
	<security:cors configuration-source-ref="corsConfigurationSource" />
		
		<security:csrf disabled="false" />
		<security:headers>
			<security:frame-options policy="SAMEORIGIN" />
		</security:headers>

		<security:intercept-url
			pattern="/member/mypage/**"
			access="hasAnyRole('ROLE_USER', 'ROLE_OWNER')" />
		<security:intercept-url
			pattern="/member/edit/**"
			access="hasAnyRole('ROLE_USER', 'ROLE_OWNER')" />


		<security:intercept-url pattern="/store/list"
			access="permitAll" />
		<security:intercept-url pattern="/store/detail"
			access="permitAll" />
		<security:intercept-url pattern="/store/api/**"
			access="permitAll" />

		<security:intercept-url
			pattern="/store/reviews/**"
			access="hasAnyRole('ROLE_USER', 'ROLE_OWNER')" />


		<security:intercept-url pattern="/store/**"
			access="hasRole('ROLE_OWNER')" />


		<security:intercept-url
			pattern="/book/manage**" access="hasRole('ROLE_OWNER')" />
		<security:intercept-url
			pattern="/wait/updateStatus**" access="hasRole('ROLE_OWNER')" />
		<security:intercept-url
			pattern="/wait/register**" access="hasRole('ROLE_USER')" />
		<security:intercept-url
			pattern="/wait/myStatus**" access="hasRole('ROLE_USER')" />
		<!-- wait fetch to fail 오류 -->
		<security:intercept-url
			pattern="/wait/cancel**" access="hasRole('ROLE_USER')" />
		

		<!-- pay security 설정 -->
		<!-- 점주와 사용자의 환불기능 -->
		<!-- <security:intercept-url pattern="/pay/api/v1/payment/refund" access="hasAnyRole('ROLE_OWNER', 
			'ROLE_USER')" /> <security:intercept-url pattern="/pay/api/**" access="hasRole('ROLE_USER')" 
			/> -->
		<security:intercept-url
			pattern="/pay/api/v2/payment/refund**"
			access="hasAnyRole('ROLE_OWNER', 'ROLE_USER')" />
		<security:intercept-url pattern="/pay/api/**"
			access="hasRole('ROLE_USER')" />


		<security:intercept-url pattern="/**"
			access="permitAll" />

		<security:form-login login-page="/member/login"
			login-processing-url="/login" username-parameter="username"
			password-parameter="password"
			authentication-success-handler-ref="loginSuccessHandler"
			authentication-failure-url="/member/login?error=true" />

		<security:logout logout-url="/logout"
			logout-success-url="/" invalidate-session="true"
			delete-cookies="JSESSIONID" />
	</security:http>

	<security:authentication-manager>
		<security:authentication-provider
			user-service-ref="customUserDetailsService">
			<security:password-encoder
				ref="bcryptPasswordEncoder" />
		</security:authentication-provider>
	</security:authentication-manager>
</beans>